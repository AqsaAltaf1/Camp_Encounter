<div class = 'col-lg-12 col-md-12 row' >
  <div class='col'>
    <%= form_tag(camp_admin_users_path, method: "get") do %>
      <%= label_tag(:q, "") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search", class:"btn btn-outline-success btn-sm") %>
    <% end %>
    </div>
    <div class='col'>
      <%= link_to 'Export to CSV',camp_admin_users_path(format: :csv), class:'btn btn-success' %>
    </div>
    <div class='col'>
      <%= link_to 'Camp details',camp_admin_locations_path, class:'btn btn-success' %>
    </div>
  </div>
  <h1>User data</h1>
  <table class='table table-striped table-hover'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th><%= sortable "id", "User ID"%></th>
        <th><%= sortable "first_name", "FirstName" %></th>
        <th><%= sortable "last_name","LastName" %></th>
        <th><%= sortable "email" %></th>
        <th><%= sortable "country", "Country" %></th>
        <th><%= sortable "phone_number", "Phone" %></th>
        <th  colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.country %></td>
          <td><%= user.phone_number %></td>
          <td><%= link_to 'Show', camp_admin_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_camp_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy', camp_admin_user_path(user), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>
<%= link_to 'Back', root_path, class: 'btn btn-success' %>

