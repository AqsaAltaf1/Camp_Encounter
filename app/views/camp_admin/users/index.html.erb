 <h1>User data</h1>
<div class = 'col-lg-12 col-md-12 row mb-3 me-0' >
  <div class='col'>
    <%= form_tag(camp_admin_users_path, method: "get") do %>
      <%= label_tag(:q, "") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search", class:"btn btn-outline-success btn-sm") %>
    <% end %>
    </div>
    <div class='col'>
      <%= link_to 'Export to CSV',camp_admin_users_path(format: :csv), class:'btn btn-success position-relative top-0 start-50' %>
    </div>
  </div>
  <table class='table table-striped table-hover'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th>ID<%= sortable "id", '&#x2190'%></th>
        <th>FirstName<%= sortable "first_name", "" %></th>
        <th>LastName<%= sortable "last_name","" %></th>
        <th><%= sortable "email" %></th>
        <th>Country<%= sortable "country", "" %></th>
        <th>Phone<%= sortable "phone_number", "" %></th>
        <th  colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.country %></td>
          <td><%= user.phone_number %></td>
          <td><%= link_to 'Show', camp_admin_user_path(user) %></td>
          <td><%= link_to 'Edit', edit_camp_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy', camp_admin_user_path(user), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>


