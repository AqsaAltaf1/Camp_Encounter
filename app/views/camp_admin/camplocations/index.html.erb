<h1>Camp Locations data</h1>
<div class = 'col-lg-12 col-md-12 row' >
  <div class='col'>
    <%= form_tag(camp_admin_camplocations_path, method: "get") do %>
      <%= label_tag(:p, "") %>
      <%= text_field_tag(:p) %>
      <%= submit_tag("Search", class:"btn btn-outline-success btn-sm") %>
    <% end %>
  </div>

  <div class='col'>
    <%= link_to 'Export to CSV',camp_admin_camplocations_path(format: :csv), class:'btn btn-success' %>
  </div>

  <div class='col'>
  <%= link_to 'Add Location',new_camp_admin_camplocation_path, class:'btn btn-success' %>
  </div>
  <table class='table table-striped table-hover mt-3'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th><%= sortable "title", "Title"%></th>
        <th  colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @camplocations.each do |camplocation| %>
        <tr>
          <td><%= camplocation.title %></td>
          <td><%= link_to 'Edit', edit_camp_admin_camplocation_path(camplocation) %></td>
          <td><%= link_to 'Destroy',camp_admin_camplocation_path(camplocation), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='row'>
   <div class='col'>
   <%= paginate @camplocations %>
   </div>
  <div class='col'>

   <%= link_to 'Back',camp_admin_locations_path, class:'btn btn-success' %>
  </div>
  </div>


</div>



