<div class="holder d-flex align-items-center justify-content-center">
  <div class="container">
		<div class="row">
			<div class="col-lg-5 mx-auto">
					<div class="card rounded border-0 shadow-lg mt-3 position-relative">
						<div class="card-body p-5">
							<div class="d-flex align-items-center mb-4 pb-4 border-bottom"><i class="far fa-calendar-alt fa-3x"></i>
								<div class="ms-3">
									<h4 class="text-center fw-weight-bold mb-0">Select Camp</h4>
								</div>
							</div>
								<p>Please select the option you want to access</p>
								<table class='table table-hover pretty'>
									<tbody>
										<% @locations.each do |location| %>
										<tr>
											<td><%=link_to location.title ,camp_admin_location_path(location) %></td>
										</tr>
										<% end %>
									</tbody>
							</table>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
