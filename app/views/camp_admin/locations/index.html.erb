<div class='row mt-3'>
  <div class='col'>
    <h1>Locations data</h1>
  </div>
  <div class='col'>
    <%= link_to 'Add Location',new_camp_admin_location_path, class:'btn btn-success  position-relative top-0 start-50' %>
  </div>
</div>
<div class = 'col-lg-12 col-md-12 mt-3' >
  <table class='table table-striped table-hover pretty'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th> ID </th>
        <th> Title </th>
        <th> Camp_Locations</th>
        <th> Status </th>
        <th> Start date</th>
        <th> End date</th>
        <th  colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.id %></td>
          <td><%= location.title %></td>
          <td><%= location.camp_location %></td>
          <td><%= location.status %></td>
          <td><%= location.start_date %></td>
          <td><%= location.end_date %></td>
          <td><%= link_to 'View', camp_admin_location_path(location) %></td>
          <td><%= link_to 'Edit', edit_camp_admin_location_path(location) %></td>
          <td><%= link_to 'Destroy', camp_admin_location_path(location), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @locations %>
</div>




