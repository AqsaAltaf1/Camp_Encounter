<div class='row'>
  <div class='col'>
    <%= link_to 'Add Camp',new_camp_admin_location_path, class:'btn btn-success' %>
  </div>
  <div class='col'>
    <%= link_to 'Locations',camp_admin_camplocations_path, class:'btn btn-success' %>
  </div>
</div>
<div class = 'col-lg-12 col-md-12' >
  <h1>Locations data</h1>
  <table class='table table-striped table-hover'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th> Title </th>
        <th> Camp_Locations</th>
        <th> Status </th>
        <th> Start date</th>
        <th> End date</th>
        <th  colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>

          <td><%= location.title %></td>
          <td><%= location.camp_location %></td>
          <td><%= location.status %></td>
          <td><%= location.start_date %></td>
          <td><%= location.end_date %></td>
          <td><%= link_to 'Show', camp_admin_location_path(location) %></td>
          <td><%= link_to 'Edit', edit_camp_admin_location_path(location) %></td>
          <td><%= link_to 'Destroy', camp_admin_location_path(location), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back',camp_admin_users_path, class:'btn btn-success btn-sm' %>
</div>




