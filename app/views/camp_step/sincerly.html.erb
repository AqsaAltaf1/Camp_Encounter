<%= "Step #{@current_step} of #{@total_steps}" %>
<div class="progress">
  <div class="progress-bar bg-success" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="container ">
  <div class="col-md-6 mx-auto shadow p-4  mt-5 mb-5 bg-body rounded">
    <%= form_for @user_application || current_user.user_application, url: wizard_path do |f| %>
      <% val = @user_application || current_user.user_application %>
      <%= hidden_field_tag :user_application_id, val.id %>
      <h1>Forth step</h1>
        <p class="text-start"> i will participate sincerly</p>
      <div class="row mt-2">
        <div>
          <%= f.radio_button :agree, :true %>
          <%= f.label :agree, "YES", :value => "true" %>
        </div>
        <div>
          <%= f.radio_button :agree, :false %>
          <%= f.label :agree, "NO", :value => "False" %>
        </div>
      </div>

      <div class="row mt-2">
        <div class='col'>
          <%= link_to "Back", previous_wizard_path, class: 'btn btn-success personal-btn' %>
        </div>
        <div class='col'>
          <%= f.submit "submit", class: 'btn btn-success personal-btn' %>
        </div>
        <div class='col'>
          <%= link_to 'skip', next_wizard_path, class: 'btn btn-success personal-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
