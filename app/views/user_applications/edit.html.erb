<div class="container mt-3">
  <div class="col-md-6 mx-auto shadow p-5 mb-5 bg-body rounded">
   <h3>Edit here</h3>
   <%= form_with model: @user_application, url: user_application_path(@user_application),     method: :patch, local: true do |f| %>
      <div class="row mt-2">
        <div class='col'>
          <%= f.label :FirstName %><br />
          <%= f.text_field :first_name,  class: "form-control"%>
        </div>
        <div class="col">
          <%= f.label :LastName %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col">
          <%= f.label :Date_of_birth %><br/>
          <%= f.datetime_field :Date_of_birth, start_year: Date.today.year - 100, end_year: Date.today.year, class: 'form-control' %>
        </div>

        <div class="col">
          <%= f.label :Current_age %>
          <%= f.text_field :Current_age, class: 'form-control' %>
        </div>
      </div>

      <div class="row mt-2">
        <%= f.label :email%><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="row mt-2">
        <%= f.label :Gender %><br />
        <div class='col'>
          <%= f.label :Gender, "Male", :value => "Male"  %>
          <%= f.radio_button :Gender, :Male %>
        </div>
        <div class='col'>
          <%= f.label :Gender, "Female", :value => "Female" %>
          <%= f.radio_button :Gender, :Female %>
        </div>
        <div class='col'>
          <%= f.label :Gender, "Others", :value => "Others" %>
          <%= f.radio_button :Gender, :Others %>
        </div>
      </div>

      <div class="row mt-2">
        <%= f.label :Profile_image %>
        <%= f.file_field :image, autofocus: true, autocomplete:'image',class:'form-control' %>
      </div>

      <div class="col">
        <%= f.submit "Update", class: 'btn btn-success mb-3 btn-md mt-3' %>
      </div>
    <% end %>
  </div>
</div>
