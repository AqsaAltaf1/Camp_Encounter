<h1>Application data</h1>
<div class = 'col-lg-12 col-md-12 row mb-3 me-0' >
  </div>
  <table class='table table-striped table-hover pretty'>
    <thead class='mb-2 bg-success'>
      <tr>
        <th> ID </th>
        <th> First Name </th>
        <th> Last Name</th>
        <th> email </th>
        <th> Gender </th>
        <th> Date of Birth</th>
        <th> Current age</th>
        <th  colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_application.each do |application| %>
        <tr>
          <td><%= application.id%></td>
          <td><%= application.first_name %></td>
          <td><%= application.last_name %></td>
          <td><%= application.email %></td>
          <td><%= application.Gender %></td>
          <td><%= application.Date_of_birth %></td>
          <td><%= application.Current_age %></td>
          <td><%= link_to 'View', user_application_path(application) %></td>
          <td><%= link_to 'Edit', edit_user_application_path(application) %></td>
          <td><%= link_to 'Destroy', user_application_path(application), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
