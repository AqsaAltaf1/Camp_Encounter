<div class = 'col-lg-12 col-md-12 row' >
  <h1 class='col'>Camp Locations data</h1>
  <div class='col'>
 <%= link_to 'Add Location',new_camplocation_path, class:'btn btn-success' %>
 </div>
  <table class='table table-striped table-hover'>
    <thead class='p-3 mb-2 bg-success'>
        <tr>
        <th> Title </th>
        <th  colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @camplocations.each do |camplocation| %>
        <tr>
          <td><%= camplocation.title %></td>
          <td><%= link_to 'Edit', edit_camplocation_path(camplocation) %></td>
          <td><%= link_to 'Destroy', camplocation_path(camplocation), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table


